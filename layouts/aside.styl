.aside
  width 211px
  background #34495E
  float left
  font-size 14px
  font-family 'Segoe UI'
  line-height 107%
  letter-spacing 15%
  min-height 100%
  a
    color #fff
    text-decoration none
    outline none
  .logotype
    height 53px
    border-bottom 1px solid #344456
    a
      img
        padding-top 16px
        display block
        border 0
  .search
    padding 25px 0 25px 9px
    border-bottom 1px solid #344456
    input[type=search]
      padding 6px 7px
      height 18px
      width 168px
      border-radius 1px
      border none
    input[type=submit]
      background-position -28px 0
      height 17px
      width 16px
      border 0
      margin-left -27px
    input
      &::-webkit-input-placeholder
        font 14px italic'Segoe UI'
      &::-moz-placeholder
        font 14px italic'Segoe UI'
      &:-moz-placeholder
        font 14px italic'Segoe UI'
      &:-ms-input-placeholder
        font 14px italic'Segoe UI'
  .add-buttons-wrapper
    padding 27px 9px 25px
    a
      img
        display block
        margin 7px auto 0
        border 0
    .add-task
      background #2ECC71
      height 38px
      width 86px
      float left
      margin-right 10px
      border-radius 3px
      img
    .add-document
      background #3498DB
      height 38px
      width 86px
      float left
      border-radius 3px
      img
  .user-folder
    margin 5px 0 8px 0
    .folder-icon
      width 14px
      height 11px
      background-position 0 0
      float left
      margin 2px 10px 0 19px
  ul
    color #fff
    margin 9px 0 8px 0
    padding-left 33px
    a
      color #fff
      text-decoration none
    li
      list-style none
      padding 6px 0 2px
      margin-bottom 3px
      height 21px
      border 1px solid #34495E
      &.active
        border 1px solid #2C3E50
        background #2E4154
      span
        float right
        font-size 12px
        padding 1px 5px
        margin 0 8px 0 0
        background #fff
        color #354861
        border-radius 2px
  .open-list-icon
    background-position -14px 0
    float left
    height 4px
    width 7px
    margin 5px 1px 0 3px
  .tasks-heading
    margin 21px 0 10px
  .tasks-icon
    background-position 0 -11px
    float left
    height 11px
    width 11px
    margin 2px 9px 0 10px
  .documents-heading
    margin 14px 0 8px
  .documents-icon
    background-position -11px -11px
    float left
    height 11px
    width 11px
    margin 2px 9px 0 10px
  .trash
    margin 10px 0 0 0
    .trash-icon
      background-position 0 -22px
      width 12px
      height 14px
      float left
      margin 0 10px 0 20px
