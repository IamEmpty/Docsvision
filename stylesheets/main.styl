html
  height 100%

body
  background #34495E
  height 100%

.clear
  clear both

.sprite
  background-image url(../img/sprite.png)

.white-background
  position absolute
  min-height 100%
  background #fff
  left 50%
  width 50%
  z-index -20

.top-nav-background
  position absolute
  height 53px
  background #ECF0F1
  width 50%
  left 50%
  border-bottom 1px solid #DBE0E3
  z-index -10

.page-wrapper
  margin 0 auto
  width 976px
  height 100%

.aside
  width 211px
  background #34495E
  float left
  font-size 14px
  font-family 'Segoe UI'
  line-height 107%
  letter-spacing 15%
  min-height 100%
  a
    color #fff
    text-decoration none
    outline none
  .logotype
    height 53px
    border-bottom 1px solid #344456
    a
      img
        padding-top 16px
        display block
        border 0
  .search
    padding 25px 0 25px 9px
    border-bottom 1px solid #344456
    input[type=search]
      padding 6px 7px
      height 18px
      width 168px
      border-radius 1px
      border none
    input[type=submit]
      background-position -28px 0
      height 17px
      width 16px
      border 0
      margin-left -27px
    input
      &::-webkit-input-placeholder
        font 14px italic'Segoe UI'
      &::-moz-placeholder
        font 14px italic'Segoe UI'
      &:-moz-placeholder
        font 14px italic'Segoe UI'
      &:-ms-input-placeholder
        font 14px italic'Segoe UI'
  .add-buttons-wrapper
    padding 27px 9px 25px
    a
      img
        display block
        margin 7px auto 0
        border 0
    .add-task
      background #2ECC71
      height 38px
      width 86px
      float left
      margin-right 10px
      border-radius 3px
      img
    .add-document
      background #3498DB
      height 38px
      width 86px
      float left
      border-radius 3px
      img
  .user-folder
    margin 5px 0 8px 0
    .folder-icon
      width 14px
      height 11px
      background-position 0 0
      float left
      margin 2px 10px 0 19px
  ul
    color #fff
    margin 9px 0 8px 0
    padding-left 33px
    a
      color #fff
      text-decoration none
    li
      list-style none
      padding 6px 0 2px
      margin-bottom 3px
      height 21px
      border 1px solid #34495E
      &.active
        border 1px solid #2C3E50
        background #2E4154
      span
        float right
        font-size 12px
        padding 1px 5px
        margin 0 8px 0 0
        background #fff
        color #354861
        border-radius 2px
  .open-list-icon
    background-position -14px 0
    float left
    height 4px
    width 7px
    margin 5px 1px 0 3px
  .tasks-heading
    margin 21px 0 10px
  .tasks-icon
    background-position 0 -11px
    float left
    height 11px
    width 11px
    margin 2px 9px 0 10px
  .documents-heading
    margin 14px 0 8px
  .documents-icon
    background-position -11px -11px
    float left
    height 11px
    width 11px
    margin 2px 9px 0 10px
  .trash
    margin 10px 0 0 0
    .trash-icon
      background-position 0 -22px
      width 12px
      height 14px
      float left
      margin 0 10px 0 20px

.main-content
  max-width 765px
  width 100%
  background #fff
  float left
  font 14px 'Segoe UI'
  line-height 120%
  color #535353
  min-height 100%
  a
    outline none
  .top-line
    background #ECF0F1
    height 39px
    border-bottom 1px solid #DBE0E3
    padding 14px 0 0 0
    ul
      padding 3px 0 0 30px
      margin 0
      a
        color #34495E
        text-decoration none
      li
        list-style none
        float left
        font 16px 'Segoe UI Semibold'
        padding-bottom 13px
        margin-right 37px
        &.active
          border-bottom 2px solid #3498DB
    .user
      float right
      a
        font 14px 'Segoe UI'
        color #40536A
        text-decoration none
        margin-right 6px
        p
          float left
        .open-profile-button
          background-position -14px -4px
          width 7px
          height 4px
          float right
          margin 9px 0 0 7px
  .tasks
    padding-left 25px
    ul
      padding-left 30px
      li
        list-style none
        border-top 1px solid #E5E5E5
        border-bottom 1px solid #E5E5E5
        height 43px
    h1
      font 30px 'Segoe UI'
      color #1F1F1F
      margin 19px 0 34px 2px

.page-404
  padding-left 28px
  h1
    font-size 55px
    color #4C4C4C
    margin 40px 0 32px 0
  h2
    font-size 16px
    font-family 'Segoe UI Semibold'
    text-transform uppercase
    color #4C4C4C
  p
    font-family 'PT Sans'
    margin-top 27px
    line-height 180%
    a
      color #3F9AE0

.search-page
  padding-left 26px
  h1
    font 30px 'Segoe UI'
    color #4C4C4C
    margin 19px 0 34px 0
  .search-block
    background #F0F2F4
    border 1px solid #D7DCE1
    input[type=submit]
      background #5D778F
      color #fff
      height 29px
      width 80px
      border 0
    input[type=search]
      font-family 'Myriad Pro'
      background #fff
      color #363636
      height 15px
      width 455px
      border 1px solid #BEC2C4
      padding 6px 7px
